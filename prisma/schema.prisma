generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  name     String?
  pets     Pet[]
}

model Pet {
  id           String   @id @default(cuid())
  name         String
  species      String   
  breed        String
  ownerName    String
  ownerContact String
  birthDate    DateTime 
  userId       String   
  user         User     @relation(fields: [userId], references: [id])
  createdAt    DateTime @default(now())
}